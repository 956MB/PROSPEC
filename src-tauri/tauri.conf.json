{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "",
        "beforeDevCommand": "",
        "withGlobalTauri": true,
        "devPath": "http://localhost:3000",
        "distDir": "../dist"
    },
    "package": {
        "productName": "ProSpec",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "fs": {
                "scope": [
                    "$APP/**", "$APP/src/**", "$APP/src/data/**", "$APP/src/bats/**", "$APP/src/assets/**" ,"$DOWNLOAD/**", "$RESOURCE/**", "/data/**", "data/**"
                ],
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/pink.ico"
            ],
            "identifier": "com.prospec.win",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [
                "assets/**",
                "data/**",
                "bats/*"
            ],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "title": "ProSpec",
                "resizable": true,
                "fullscreen": false,
                "height": 830,
                "minHeight": 500,
                "width": 1480,
                "minWidth": 1080,
                "decorations": false,
                "fileDropEnabled": false,
                "transparent": true
            }
        ]
    }
}